<div class="container  w500" style="margin-top:20px; margin-bottom:120px;">
    <div class="row">
        <h4>agregar una nueva novedad</h4>
        <form action="/admin/novedad/agregar" method="POST">
            <div class="row mb-3">
                <label for="Titulo" class="col-sm-2 col-form-label" >Titulo</label>
                <div class="col-sm-10">
                      <input type="text" class="form-control" id="titulo" name="titulo">
       
                </div>
            </div>

            <div class="row mb-3">
                <label for="Subtitulo" class="col-sm-2 col-form-label">Subtitulo</label>
                <div class="col-sm-10">
                    
                      <input type="text" class="form-control" id="subtitulo" name="subtitulo">
       
                </div>
            </div>
            <div class="row mb-3">
                <label for="Cuerpo" class="col-sm-2 col-form-label">Cuerpo</label>
                <div class="col-sm-10">
                    <textarea class="form-control" name="cuerpo" id="cuerpo"></textarea>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">agregar</button>
        </form>
       
      {{#if error}}
         {{message}}
         {{/if}}
    </div>
</div>
